{
    "name"                  : "larawise/packagify",
    "type"                  : "package",
    "description"           : "Packagify - Laravel packages made intuitive for every developer.",
    "keywords"              : ["srylius","laravel","package","tools","packagify","eloquent","advanced","boilerplate","ecosystem","development","larawise"],
    "license"               : "MIT",
    "homepage"              : "https://larawise.com/",

    "authors"               : [{
        "name"            : "Selçuk Çukur",
        "email"           : "hk@selcukcukur.com.tr",
        "homepage"        : "https://selcukcukur.com.tr"
    }],

    "support"               : {
        "source"          : "https://github.com/larawise/packagify",
        "issues"          : "https://github.com/larawise/packagify/issues",
        "docs"            : "https://docs.larawise.com"
    },

    "require"               : {
        "php"                               : "^8.2|^8.3|^8.4",
        "larawise/larawise"                 : "dev-main"
    },
    "require-dev"           : {
        "mockery/mockery"                   : "^1.5",
        "orchestra/testbench"               : "^10.0",
        "pestphp/pest"                      : "^3.1",
        "phpunit/php-code-coverage"         : "^11.0",
        "phpunit/phpunit"                   : "^11.5"
    },

    "autoload"              : {
        "psr-4"     : {
            "Larawise\\Packagify\\"         : "./src"
        }
    },
    "autoload-dev"          : {
        "psr-4"     : {
            "Larawise\\Packagify\\Tests\\"  : "./tests"
        }
    },

    "extra"                 : {
        "laravel"   : {
            "providers"     : ["Larawise\\Packagify\\PackagifyServiceProvider"],
            "aliases"       : { "Packagify": "Larawise\\Packagify\\Facades\\Packagify" }
        }
    },

    "config"                : {
        "optimize-autoloader"   : true,
        "preferred-install"     : "dist",
        "sort-packages"         : true,
        "allow-plugins"         : {
            "pestphp/pest-plugin": true
        }
    },

    "minimum-stability"     : "dev",
    "prefer-stable"         : true
}
